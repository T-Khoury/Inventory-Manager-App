<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div class="create-category">
            <% if (typeof category == 'object' && category) { %>
                <form method="POST" id="category-form">
                    <div class="form-group" id="category-name-input">
                        <label for="name">Category name:</label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= category.name %>"required>
                    </div>
                    <div class="form-group" id="category-description-input">
                        <label for="description">Description:</label>
                        <textarea id="description" class="form-control" name="description" required><%= category.description %></textarea>
                    </div>
                    <button class="submit-button" type="submit">Submit</button>
                </form>
            <% } else { %>
                <form method="POST" id="category-form">
                    <div class="form-group" id="category-name-input">
                        <label for="name">Category name:</label>
                        <input type="text" id="name" name="name" class="form-control" required>
                    </div>
                    <div class="form-group" id="category-description-input">
                        <label for="description">Category Description:</label>
                        <textarea id="description" class="form-control" placeholder="Description of category" name="description" required></textarea>
                    </div>
                    <button class="submit-button" type="submit">Submit</button>
                </form>
            <% } %>
        </div>
    </body>
</html>